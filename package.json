{
  "name": "write-good-linter",
  "displayName": "Write Good Linter",
  "description": "Applies the Write Good Linter to your Markdown, so you can write more good.",
  "version": "0.0.8",
  "publisher": "travisthetechie",
  "engines": {
    "vscode": "^1.1.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "write-good",
      "properties": {
        "write-good.languages": {
          "default": [
            "markdown"
          ],
          "type": [
            "string",
            "array"
          ],
          "items": {
            "type": "string"
          },
          "description": "Languages to lint with the write-good linter. '*' to enable on all languages.",
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.89",
    "mocha": "^2.3.3",
    "typescript": "^2.0.3",
    "vscode": "^1.1.0"
  },
  "dependencies": {
    "write-good": "^0.11.3"
  },
  "license": "MIT",
  "repository": {
    "url": "https://github.com/TravisTheTechie/vscode-write-good"
  }
}
